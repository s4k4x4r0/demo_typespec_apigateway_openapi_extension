{
  "name": "Demo TypeSpec API Gateway OpenAPI Extensions",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers-extra/features/aws-cdk:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": ["typespec.typespec-vscode", "esbenp.prettier-vscode"],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "explicit"
        }
      }
    }
  },
  "postCreateCommand": "chmod u+x ./postCreateCommand.sh && ./postCreateCommand.sh"
}
